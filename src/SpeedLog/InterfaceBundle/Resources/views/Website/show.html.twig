{% extends 'SpeedLogInterfaceBundle::interface.html.twig' %}

{% block pagetitle %}
<div class="title-env">
    <h1 class="title">{{ document.name }}</h1>
    <p class="description">{{ document.url }}</p>
</div>
<div class="breadcrumb-env">
  <a href="{{ path('website') }}" class="btn btn-lg btn-blue">{% trans %}Back to list{% endtrans %}</a>
</div>
{% endblock %}

{% block content %}
<div  class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{% trans %}Pages{% endtrans %}</h3>
  </div>
  <div class="panel-body">
    <script type="text/javascript">
      jQuery(document).ready(function($)
      {
        $("#pages-list").dataTable({
          aLengthMenu: [
            [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
          ]
        });
      });
    </script>
    <table id="pages-list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Last check{% endtrans %}</th>
                    <th>{% trans %}Backend time{% endtrans %}</th>
                    <th>{% trans %}Frontend time{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                  </tr>
                </thead>
              
                <tfoot>
                  <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Last check{% endtrans %}</th>
                    <th>{% trans %}Backend time{% endtrans %}</th>
                    <th>{% trans %}Frontend time{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                  </tr>
                </tfoot>
              
                <tbody>
                  {% for p in document.pages %}
                  <tr>
                    <td><a href="{{ path('website_show', { 'id': p.id }) }}">{{ p.name }}</a></td>
                    {% if p.lastReport is null %}
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>
                          <a href="{{ path('website_show', { 'id': p.id }) }}" class="btn btn-blue btn-sm btn-icon icon-left">
                            {% trans %}Generate Report{% endtrans %}
                          </a>
                        </td>
                    {% else %}
                        <td>{{ p.lastReport.created|human_date }}</td>
                        <td>{{ p.lastReport.httpTrafficCompleted }} ms</td>
                        <td>{{ p.lastReport.domComplete }} ms</td>
                        <td>
                          <a href="{{ path('website_show', { 'id': p.id }) }}" class="btn btn-secondary btn-sm btn-icon icon-left">
                            {% trans %}View Reports{% endtrans %}
                          </a>
                        </td>
                    {% endif %}
                    
                  </tr>
                  {% endfor %}
                </tbody>
    </table>
  </div>
</div>

{% endblock %}