<h1>Website</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ document.url }}</td>
        </tr>
        <tr>
            <th>Group</th>
            <td>{{ document.group }}</td>
        </tr>
        <tr>
            <th>Pages</th>
            <td>{{ document.pages }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ document.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ document.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('website') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('website_edit', { 'id': document.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('website_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
