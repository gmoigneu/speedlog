{% extends 'SpeedLogInterfaceBundle::interface.html.twig' %}

{% block pagetitle %}
<div class="title-env">
    <h1 class="title">{% trans %}Manage your websites{% endtrans %}</h1>
    <p class="description">{% trans %}Add, remove and edit your websites{% endtrans %}</p>
</div>
<div class="breadcrumb-env">
  <a href="{{ path('website_new') }}" class="btn btn-lg btn-blue">{% trans %}Add a new website{% endtrans %}</a>
</div>
{% endblock %}

{% block content %}
<div  class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{% trans %}Websites{% endtrans %}</h3>
  </div>
  <div class="panel-body">
    <script type="text/javascript">
      jQuery(document).ready(function($)
      {
        $("#websites-list").dataTable({
          aLengthMenu: [
            [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
          ]
        });
      });
    </script>
    <table id="websites-list" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Url{% endtrans %}</th>
                    <th>{% trans %}Pages{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                  </tr>
                </thead>
              
                <tfoot>
                  <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Url{% endtrans %}</th>
                    <th>{% trans %}Pages{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                  </tr>
                </tfoot>
              
                <tbody>
                  {% for w in documents %}
                  <tr>
                    <td><a href="{{ path('website_show', { 'id': w.id }) }}">{{ w.name }}</a></td>
                    <td>{{ w.url }}</td>
                    <td>{{ w.pages|length }}</td>
                    <td>
                      <a href="{{ path('website_show', { 'id': w.id }) }}" class="btn btn-secondary btn-sm btn-icon icon-left">
                        {% trans %}View Reports{% endtrans %}
                      </a>
                      <a href="{{ path('website_edit', { 'id': w.id }) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                        {% trans %}Manage{% endtrans %}
                      </a>
                      
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
    </table>
  </div>
</div>

{% endblock %}